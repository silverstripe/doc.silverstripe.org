{
  "name": "doc-silverstripe-org",
  "version": "1.0.0",
  "description": "The Silverstripe CMS documentation website (docs.silverstripe.org)",
  "scripts": {
    "dev": "sh -c 'CONTEXT=${DOCS_CONTEXT:-docs} && npm run dev:${CONTEXT}'",
    "dev:docs": "DOCS_CONTEXT=docs sh -c 'npm run copy-images:docs && next dev --port 9876'",
    "dev:user": "DOCS_CONTEXT=user sh -c 'npm run copy-images:user && next dev --port 9876'",
    "mock": "NEXT_USE_MOCK_DATA=true sh -c 'npm run copy-images:mock && next dev --port 9876'",
    "build": "sh -c 'CONTEXT=${DOCS_CONTEXT:-docs} && npm run build:${CONTEXT}'",
    "build:docs": "DOCS_CONTEXT=docs sh -c 'next build && npm run copy-images:docs'",
    "build:user": "DOCS_CONTEXT=user sh -c 'next build && npm run copy-images:user'",
    "clone": "sh -c 'DOCS_CONTEXT=${DOCS_CONTEXT:-docs} node scripts/clone-docs.mjs'",
    "clone:docs": "DOCS_CONTEXT=docs node scripts/clone-docs.mjs",
    "clone:user": "DOCS_CONTEXT=user node scripts/clone-docs.mjs",
    "copy-images": "sh -c 'DOCS_CONTEXT=${DOCS_CONTEXT:-docs} node scripts/copy-images.mjs'",
    "copy-images:docs": "DOCS_CONTEXT=docs node scripts/copy-images.mjs",
    "copy-images:user": "DOCS_CONTEXT=user node scripts/copy-images.mjs",
    "copy-images:mock": "NEXT_USE_MOCK_DATA=true node scripts/copy-images.mjs",
    "lint": "eslint src/ --ext .ts,.tsx",
    "test": "jest --maxWorkers=2",
    "start": "http-server out -c-1 -p 9877",
    "kill": "kill-port 9876 9877"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silverstripe/doc.silverstripe.org"
  },
  "license": "BSD-3",
  "bugs": {
    "url": "https://github.com/silverstripe/doc.silverstripe.org/issues"
  },
  "dependencies": {
    "@docsearch/react": "^4.3.2",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "classnames": "^2.5.1",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^9.0.1",
    "next": "^16.0.3",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.0",
    "remark-html": "^16.0.1",
    "remark-rehype": "^11.1.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "kill-port": "^2.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2"
  }
}
